# ArgoCD Repository Configuration Template
# Copy this to repository-config.env and fill in your values

# GitHub Repository Configuration
GITHUB_REPO_URL="https://github.com/YOUR_USERNAME/YOUR_REPO.git"
GITHUB_USERNAME="YOUR_USERNAME"
GITHUB_TOKEN="YOUR_GITHUB_PAT_TOKEN"

# Repository Paths
CROSSPLANE_COMPOSITIONS_PATH="crossplane/compositions"
CROSSPLANE_CLAIMS_PATH="crossplane/claims"
TERRAFORM_MANIFESTS_PATH="terraform/k8s-manifests"
GUESTBOOK_PATH="guestbook"
HELM_GUESTBOOK_PATH="helm-guestbook"

# Target Revision
TARGET_REVISION="HEAD"

# Namespaces
CROSSPLANE_NAMESPACE="crossplane-system"
AZURE_RESOURCES_NAMESPACE="azure-resources"
TERRAFORM_NAMESPACE="terraform"
DEFAULT_NAMESPACE="default"
